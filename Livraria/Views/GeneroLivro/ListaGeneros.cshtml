@model IEnumerable<GeneroLivro>

@{
    ViewData["Title"] = "ListaGeneros";
}

<h2>Index</h2>
<p>
    <a asp-action="CadastrarGenero">Cadastrar novo Gênero</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GeneroLivroId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GeneroLivroId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GeneroLivroId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
