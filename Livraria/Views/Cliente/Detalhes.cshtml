@model DadosLivro
<a asp-action="ListarLivro" class="btn-outline-success form-control col-md-1" style="margin-left:10px;" asp-controller="Cliente">Voltar</a><br />
<form method="post">
<input type="hidden" asp-for="DadosLivroId" />
    </form>
<table>

    <tr>
        <td>
            <img src="~/livrariaimagens/@Model.Imagem" class="rounded" style="width:300px;height:250px" />
        </td>
        <td style="vertical-align:top;padding-left:10px">
            <b>Autor:</b>
            <p>@Model.Autor</p>
            <b>Modelo:</b>
            <p>@Model.Title</p>
        </td>
    </tr>
</table>
<form>
    <a asp-action="ReservaLivro" class="btn-outline-info form-control col-md-1" style="text-align" asp-controller="ReservaLivro">Salvar</a>
</form>


