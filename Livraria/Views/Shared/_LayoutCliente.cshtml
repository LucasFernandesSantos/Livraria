<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/css/botaobonito.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cliente" asp-action="Index">Home</a>
                </li>
                <li class="navbar-nav mr-auto">
                    <a class="nav-link" asp-controller="Cliente" asp-action="ListarLivro">Livro</a>
                </li>
                <li class="navbar-nav mr-auto">
                    <a class="nav-link" asp-controller="Devolucao" asp-action="Devolucao">Devolução</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Opções</a>
                    <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 40px, 0px);">
                        <a class="dropdown-item" asp-controller="Cliente" asp-action="Editar">Editar</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Cliente" asp-action="Excluir">Excluir conta</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Index">Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container" style="margin-top:15px;margin-bottom:30px">
        @RenderBody()
    </div>

    <hr />
    <footer>
        <p style="text-align:center">
            &copy; @DateTime.Now.Year - Biblioteca
        </p>
    </footer>
</body>
</html>
