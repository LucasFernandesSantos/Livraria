@model Cliente
<form method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <h4 class="" style="margin-bottom:30px; color:darkgreen; background-color:wheat; margin-top:30px;">-- Cadastro Cliente --</h4>
    <div class="form-group" id="Cliente">
        <div class="form-group">
            <div class="form-inline">
                <input class="form-control col-md-4" style="margin-left:10px;" placeholder="Nome" asp-for="Nome" required="required" title="Nome" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-inline">
            <input class="form-control col-md-2" style="margin-left:10px;" placeholder="CPF" required="required" asp-for="Cpf" title="CPF" />
            <input type="password" class="form-control col-md-2" style="margin-left:10px;" placeholder="Senha" asp-for="Senha" required="required" title="Senha" />

        </div>
    </div>
    <div class="form-group">
        <div class="form-inline">
            <input type="date" class="form-control col-md-2" style="margin-left:10px;" placeholder="Date" required="required" asp-for="DataNascimento" title="Date" />
            <input type="tel" class="form-control col-md-2" style="margin-left:10px;" placeholder="Telefone" required="required" asp-for="Telefone" title="Telefone" />

        </div>
    </div>
    <div class="form-group">
        <div class="form-inline">
            <input type="email" class="form-control col-md-4" style="margin-left:10px;" placeholder="Email" required="required" asp-for="Email" title="Email" />
        </div>
    </div>

    <h4 class="" style="color:darkgreen; background-color:wheat; margin-bottom:30px; margin-top:30px"><b> -- Cadastro CEP --</b></h4>
    <div class="form-group" id="CEP">
        <div class="form-group">
            <div class="form-inline">

                <input class="form-control col-md-2" style="margin-left:10px;" placeholder="CEP" asp-for="Endereco.Cep" title="CEP" />


                <input type="submit" value="Buscar" class="btn-outline-info form-control col-md-1" style="margin-left:10px;" asp-action="BuscarCep" asp-controller="Home" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-inline">
                <div>
                    <label class="text-info"></label>
                </div>
                <input class="form-control col-md-2" style="margin-left:10px;" placeholder="Rua" asp-for="Endereco.endereco" title="Rua" readonly="" />
                <div>
                    <label class="text-info"></label>
                </div>
                <input class="form-control col-md-2" style="margin-left:10px;" placeholder="Bairro" asp-for="Endereco.Bairro" readonly="" title="Bairro" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-inline">
                <div>
                    <label class="text-info"></label>
                </div>
                <input class="form-control col-md-2" style="margin-left:10px;" placeholder="Cidade" asp-for="Endereco.Cidade" title="Cidade" readonly="" />
                <div>
                    <label class="text-info"></label>
                </div>
                <input class="form-control col-md-2" style="margin-left:10px;" placeholder="Estado" asp-for="Endereco.Uf" readonly="" title="Estado" />
            </div>

        </div>

    </div>
    <div class="form-group">
        <div class="form-inline">
            <input type="submit" value="Cadastar" class="btn-outline-success form-control col-md-4" style="margin-left:10px;" asp-action="Cadastrar" asp-controller="Home" />
        </div>
    </div>
        <h4 class="" style="color:black; color:darkgreen; background-color:wheat; margin-bottom:30px; margin-top:30px"><b> ___________________________________________________________________________________________________</b></h4>
        <style>
            body {
                position: fixed;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background: url(https://abrilsuperinteressante.files.wordpress.com/2018/04/bibliotecas.png) no-repeat center center fixed;
                background-size: cover;
                background-position: center;
                -webkit-filter: blur(0px);
            }
        </style>
</form>






